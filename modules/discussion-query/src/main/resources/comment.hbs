{{#each comments}}
<div class="comment">
    <div>
        <div>
            {{content}}
            <div>
                <a href="/query/discussion/{{_id}}#{{this.commentId}}">permalink</a>
                {{#if ../commentId}}
                <a href="/query/discussion/{{_id}}#{{../commentId}}">szülő</a>
                {{/if}}
                <a href="/query/discussion/{{_id}}/comment/{{this.commentId}}/new">Válasz</a>
            </div>
        </div>
    </div>
    {{#if comments}}
        {{> comment}}
    {{/if}}
</div>
{{/each}}

